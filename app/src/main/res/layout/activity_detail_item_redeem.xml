<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/bg_profil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/lay_header_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="40dp"
                        android:elevation="5dp"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="10dp">

                            <!--    Body-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <!--        kolom 1-->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="Data Hadiah"
                                        android:textStyle="bold"
                                        android:textSize="18sp"
                                        android:textColor="@color/abu"
                                        />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="Nama Hadiah"
                                        android:textStyle="normal"
                                        android:textSize="16sp"
                                        android:textColor="@color/abu_muda"
                                        />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="Poin Hadiah"
                                        android:textStyle="normal"
                                        android:textSize="16sp"
                                        android:textColor="@color/abu_muda"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="Waktu Penukaran"
                                        android:textStyle="normal"
                                        android:textSize="16sp"
                                        android:textColor="@color/abu_muda" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="Data User"
                                        android:textStyle="bold"
                                        android:textSize="18sp"
                                        android:textColor="@color/abu"
                                        android:layout_marginTop="10dp"
                                        />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="Nama User"
                                        android:textStyle="normal"
                                        android:textSize="16sp"
                                        android:textColor="@color/abu_muda"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="Email User"
                                        android:textStyle="normal"
                                        android:textSize="16sp"
                                        android:textColor="@color/abu_muda"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="No.Telp/ WA"
                                        android:textStyle="normal"
                                        android:textSize="16sp"
                                        android:textColor="@color/abu_muda" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="Alamat"
                                        android:textStyle="normal"
                                        android:textSize="16sp"
                                        android:textColor="@color/abu_muda" />

                                </LinearLayout>

                                <!--        Kolom 2-->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text=""
                                        android:textSize="16sp"
                                        android:textColor="@color/abu"/>

                                    <TextView
                                        android:id="@+id/tv_nama_hadiah_dt"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="Bunga"
                                        android:textSize="16sp"
                                        android:textColor="@color/abu"/>
                                    <TextView
                                        android:id="@+id/tv_poinHadiah_dt"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="20000"
                                        android:textSize="16sp"
                                        android:textColor="@color/abu"/>

                                    <TextView
                                        android:id="@+id/tv_createdat_dt"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="12-12-2022"
                                        android:textSize="16sp"
                                        android:textColor="@color/abu"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text=""
                                        android:textSize="16sp"
                                        android:textColor="@color/abu"
                                        android:layout_marginTop="10dp"/>
                                    <TextView
                                        android:id="@+id/tv_nama_user_dt"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="Coba User"
                                        android:textSize="16sp"
                                        android:textColor="@color/abu"/>
                                    <TextView
                                        android:id="@+id/tv_email_dt"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="user1@gmail.com"
                                        android:textSize="16sp"
                                        android:textColor="@color/abu"/>
                                    <TextView
                                        android:id="@+id/tv_notlp_dt"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="091829731897"
                                        android:textSize="16sp"
                                        android:textColor="@color/abu"/>
                                    <TextView
                                        android:id="@+id/tv_alamat_dt"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="Almaat userAlmaat userAlmaat userAlmaat userAlmaat userAlmaat userAlmaat userAlmaat userAlmaat user"
                                        android:textSize="16sp"
                                        android:maxLines="10"
                                        android:textColor="@color/abu"/>

                                </LinearLayout>


                            </LinearLayout>

                            <!--    NOtes-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="20dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Catatan"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:textColor="@color/abu"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:maxLines="3"
                                    android:text=" - Hadiah diproses (Produk digital : 7x24 Jam) dan (Produk Fisik 40 hari setelah redeem hadiah)."/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:maxLines="3"
                                    android:text=" - Pastikan Data User sudah sesuai."/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:maxLines="3"
                                    android:text=" - Untuk produk digital, maka akan kami kirim via Email atau No.Telpn/WA."/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:maxLines="3"
                                    android:text=" - Untuk Hadiah Produk Fisik akan kami kirim ke alamat yang terdaftar."/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:maxLines="3"
                                    android:text=" - Jika alamat dirasa kurang lengkap, maka admin kami akan konfirmasi terlebih dahulu."/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:maxLines="3"
                                    android:text=" - Ongkir ditanggu kami."/>

                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>